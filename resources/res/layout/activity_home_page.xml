<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@drawable/home_back" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:background="@drawable/title" android:layout_width="match_parent" android:layout_height="150dp"/>
    <View android:background="@drawable/home_middle_bar" android:layout_width="match_parent" android:layout_height="180dp" android:layout_centerInParent="true"/>
    <Button android:id="@+id/play" android:background="@drawable/play_clicked_drawable" android:layout_width="200dp" android:layout_height="140dp" android:layout_centerInParent="true" android:onClick="play"/>
    <Button android:id="@+id/settings" android:background="@drawable/settings_clicked_drawable" android:layout_width="80dp" android:layout_height="70dp" android:layout_marginLeft="25dp" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true" android:layout_marginStart="25dp" android:layout_alignParentStart="true"/>
    <Button android:id="@+id/score" android:background="@drawable/score_clicked_drawable" android:layout_width="80dp" android:layout_height="70dp" android:layout_marginRight="25dp" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:layout_marginEnd="25dp" android:layout_alignParentEnd="true"/>
    <Button android:id="@+id/help" android:background="@drawable/help_clicked_drawable" android:layout_width="80dp" android:layout_height="70dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
</RelativeLayout>
